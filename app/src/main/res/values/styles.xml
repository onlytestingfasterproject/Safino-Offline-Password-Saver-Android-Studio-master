<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme.FullScreen" parent="AppTheme">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
    <style name="Theme.Faster.Splash" parent="AppTheme">
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>
	<style name="AppTheme.AppBarOverlay" parent="AppTheme" />
	<style name="AppTheme.PopupOverlay" parent="AppTheme" />
	<style name="AppTheme.DebugActivity" parent="AppTheme">
    </style>
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/CustomTextInputShape</item>
    </style>
    <style name="CustomTextInputShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">13dp</item>
    </style>
    
    <style name="CustomImageShape" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">16dp</item> <!-- or use percent like 50% for circle -->
</style>
</resources>