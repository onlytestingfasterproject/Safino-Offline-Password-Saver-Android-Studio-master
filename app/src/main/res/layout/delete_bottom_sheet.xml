<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<com.google.android.material.card.MaterialCardView
			android:id="@+id/linear_top"
			android:layout_width="40dp"
			android:layout_height="6dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="5dp"
			android:padding="8dp"
			app:cardBackgroundColor="@color/blackwhite"
			android:orientation="horizontal"
			style="?attr/materialCardViewElevatedStyle"
			app:cardCornerRadius="20dp" />
		<com.google.android.material.card.MaterialCardView
			android:id="@+id/linear_edit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="@android:color/transparent"
			android:orientation="horizontal"
			app:strokeWidth="0dp"
			style="?attr/materialCardViewOutlinedStyle">
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<com.google.android.material.button.MaterialButton
					android:id="@+id/linear3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal"
					style="?attr/materialIconButtonStyle"
					app:icon="@drawable/icon_mode_edit_outline"
					app:iconSize="24dp"
					android:clickable="false"
					android:focusable="false" />
				<TextView
					android:id="@+id/textview1"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Edit this record"
					android:textSize="16sp"
					android:textColor="?attr/colorPrimary" />
			</LinearLayout>
		</com.google.android.material.card.MaterialCardView>
		<com.google.android.material.divider.MaterialDivider
			android:id="@+id/linear12"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal"
			app:dividerThickness="1dp"
			app:dividerInsetStart="30dp"
			app:dividerInsetEnd="30dp" />
		<com.google.android.material.card.MaterialCardView
			android:id="@+id/linear_share"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="@android:color/transparent"
			android:orientation="horizontal"
			app:strokeWidth="0dp"
			style="?attr/materialCardViewOutlinedStyle">
			<LinearLayout
				android:id="@+id/linear7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<com.google.android.material.button.MaterialButton
					android:id="@+id/linear8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal"
					style="?attr/materialIconButtonStyle"
					app:icon="@drawable/icon_ios_share"
					app:iconSize="24dp"
					android:clickable="false"
					android:focusable="false" />
				<TextView
					android:id="@+id/textview2"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Share this record"
					android:textSize="16sp"
					android:textColor="?attr/colorPrimary" />
			</LinearLayout>
		</com.google.android.material.card.MaterialCardView>
		<com.google.android.material.divider.MaterialDivider
			android:id="@+id/linear5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal"
			app:dividerThickness="1dp"
			app:dividerInsetStart="30dp"
			app:dividerInsetEnd="30dp" />
		<com.google.android.material.card.MaterialCardView
			android:id="@+id/linear_delete"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			app:cardBackgroundColor="@android:color/transparent"
			android:orientation="horizontal"
			app:strokeWidth="0dp"
			app:backgroundTint="@android:color/transparent">
			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal">
				<com.google.android.material.button.MaterialButton
					android:id="@+id/linear11"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal"
					style="?attr/materialIconButtonStyle"
					app:icon="@drawable/icon_delete"
					app:iconSize="24dp"
					app:iconTint="?attr/colorError"
					android:clickable="false"
					android:focusable="false" />
				<TextView
					android:id="@+id/textview3"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Delete this record"
					android:textSize="16sp"
					android:textColor="?attr/colorError" />
			</LinearLayout>
		</com.google.android.material.card.MaterialCardView>
	</LinearLayout>
</LinearLayout>
